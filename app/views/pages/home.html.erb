<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= image_path "banner.png" %>');">
</div>
<div class="banner-content">
  <h1 class="title">Coachy</h1>
  <strong><h4>Book a personal trainer at an affordable price</h4></strong>
  <br>
  <form action="<%= lessons_path %>" class="form-inline">
    <!-- <input type="text" class="form-control input-lg" placeholder="Date"> -->
    <div class="form-group">
      <div class='input-group' id='datetimepicker'>
        <input type='text' name='date' class="form-control" placeholder="Date">
        <span class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </span>
      </div>
    </div>
    <!-- <div class="form-group">
      <div class='input-group' id='locationpicker'>
        <input type="text" name='loc' class="form-control" placeholder="Location">
        <span class="input-group-addon">
          <i class="fa fa-map-marker"></i>
        </span>
      </div>
    </div> -->
    <select name='neighborhood' class="custom-select box_size_cat">
      <option value="" selected>Choose Neighborhood</option>
      <% Lesson::NEIGHBORHOOD.each do |neighborhood| %>
        <option value="<%= neighborhood %>"><%= neighborhood %></option>
      <% end %>
    </select>
    <select name='category' class="custom-select box_size">
      <option value="" selected>Choose Category</option>
      <% Lesson::CATEGORIES.each do |category| %>
        <option value="<%= category %>"><%= category %></option>
      <% end %>
    </select>
    <input type="submit" class="btn btn-primary" value="Search">
  </form>
  <br>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <% yoga_url = "yoga.png" %>
        <%= link_to lessons_path({category: "Yoga"}) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path yoga_url %>); background-position: bottom;">
          <div class="card-description">
            <h2>YOGA</h2>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <% cardio_url = "cardio.png" %>
        <%= link_to lessons_path({category: "Cardio"}) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path cardio_url %>);">
          <div class="card-description">
            <h2>CARDIO</h2>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <% pilates_url = "pilates.png" %>
        <%= link_to lessons_path({category: "Pilates"}) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path pilates_url %>);">
          <div class="card-description">
            <h2>PILATES</h2>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <% weights_url = "weights.png" %>
        <%= link_to lessons_path({category: "Weights"}) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path weights_url %>); background-position: 25% 50%;">
          <div class="card-description">
            <h2>WEIGHT LIFTING</h2>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <% boxing_url = "boxing.png" %>
        <%= link_to lessons_path({category: "Boxing"}) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path boxing_url %>); background-position: 25% 50%;">
          <div class="card-description">
            <h2>BOXING</h2>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-4">
        <!-- insert <div class="card"> -->
        <% tennis_url = "tennis.png" %>
        <%= link_to lessons_path({category: "Tennis"}) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path tennis_url %>);">
          <div class="card-description">
            <h2>TENNIS</h2>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
