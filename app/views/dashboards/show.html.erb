<div class="container text-center" style="margin-top: 30px;">
  <h1>My Dashboard</h1>

  <% if current_user.photo? %>
    <%= image_tag current_user.photo, class: "user-pic", style: "height: 300px;" %>
  <% elsif current_user.facebook_picture_url?%>
    <%= image_tag current_user.facebook_picture_url, class: "user-pic", style: "height: 300px;" %>
  <% else %>
    <%= image_tag "http://placehold.it/30x30",  class: "user-pic" %>
  <% end %>

  <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>

  <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
  <%= link_to "create a new lesson", new_lesson_path, class: "btn btn-primary" %>

  <h1>Lessons for student</h1>
  <div class="dashboard">

    <% current_user.bookings.each do |booking|%>
<div class="coach-card">
        <div class="coach-card-image" style="background-image: url('<%= booking.lesson.user.facebook_picture_url %>');">
        </div>
        <div class="coach-card-info">
          <p><strong><%= booking.lesson.category %></strong></p>
          <p><strong>Â£<%= booking.lesson.price %></strong></p>
          <p><strong><%= booking.lesson.description %></strong></p>
          <p><strong><%= booking.lesson.neighborhood %></strong></p>
          <p><strong><%= booking.lesson.start_date_time.strftime("%b %e, %l:%M %p") %></strong></p>
        </div>
        <div class="coach-card-title">


            <h4><%= booking.lesson.user.first_name%> <%= booking.lesson.user.last_name%></h4>

          </div>
            <div class="coach-card-date">
              <p><%= booking.lesson.neighborhood %>, <%= booking.lesson.price %></p>
            </div>
          <%= link_to "", lesson_path(booking.lesson), class: "card-link" %>
      </div>

      <% end %>
  </div>
</div>




