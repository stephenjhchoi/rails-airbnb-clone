<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h2>My Dashboard</h2>

    </div>
    <div class="col-md-10">
      <div class="">
      <!-- all bookibgs -->
        <div class="dashboard">
          <!-- My bookibg section -->
          <h2>My bookings</h2>
          <div class="row">
            <!-- Loop on booking -->
            <% current_user.bookings.each do |booking|%>
              <div class="col-md-4">
                <%= render "dashboard-card-user", booking: booking %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="dashboard">
          <!-- My request section -->
          <h2>My Request</h2>
          <div class="row">
            <!-- Loop on Request -->
            <% current_user.lessons.each do |lesson| %>
              <div class="col-md-4">
                <% if lesson.booking.status == 'pending' %>
                  <%= render "dashboard-card-coach", lesson: lesson %>
                <% else %>
                  <%= render "dashboard-card-coach", lesson: lesson %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
