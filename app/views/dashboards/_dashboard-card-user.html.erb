<div class="coach-card">
  <div class="coach-card-image" style="background-image: url(<%= image_path(booking.lesson.category + '.jpg') %>);">
    <%= image_tag booking.lesson.user.facebook_picture_url, :class => "avatar_card"%>
    <div class="coach-card-status <%= booking.status %>">
      <p><%= booking.status %></p>
    </div>
  </div>
  <div class="coach-card-info">
    <p class="color-incard"><strong>£<%= booking.lesson.price %></strong></p>
    <p><strong><%= booking.lesson.user.first_name %> <%= booking.lesson.user.last_name %></strong></p>
    <p><strong><%= booking.lesson.neighborhood %></strong></p>
    <p><strong><%= booking.lesson.duration %>min</strong></p>

    <br>
    <p><strong><p class="desc_under">Description: <%= truncate(booking.lesson.description, length: 60) %></p></strong></p>
  </div>
  <div class="coach-card-title">
    <h4><%= booking.lesson.user.first_name%> <%= booking.lesson.user.last_name.first%></h4>
  </div>
  <div class="coach-card-date">
    <p><%= booking.lesson.start_date_time.strftime("%b %e, %l:%M %p")  %></p>
  </div>
  <div class="coach-card-neigh">
    <p><%= booking.lesson.neighborhood %></p>
  </div>
  <div class="coach-card-price">
    <p>- £ <%= booking.lesson.price %></p>
  </div>
  <div class="coach-card-cat">
    <p><%= booking.lesson.category.upcase %></p>
  </div>
  <%= link_to "", lesson_path(booking.lesson), class: "card-link" %>

</div>
